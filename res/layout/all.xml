<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AllManager">

    <LinearLayout
            android:orientation="horizontal"
            android:background="#555"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <Button
                android:id="@+id/saveButton"
                android:background="@drawable/ic_save_24dp"
                android:layout_width="@dimen/icons"
                android:layout_height="@dimen/icons"/>

        <Button
                android:id="@+id/resetButton"
                android:background="@drawable/ic_refresh_24dp"
                android:layout_width="@dimen/icons"
                android:layout_height="@dimen/icons"/>

        <RelativeLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="@dimen/icons">

            <TextView
                    android:text="@string/app_name"
                    android:textColor="#fff"
                    android:textSize="20dp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

        </RelativeLayout>

        <Button
                android:id="@+id/infoButton"
                android:background="@drawable/ic_info_24dp"
                android:layout_width="@dimen/icons"
                android:layout_height="@dimen/icons"/>

        <Button
                android:id="@+id/menuButton"
                android:background="@drawable/ic_menu_24dp"
                android:layout_width="@dimen/icons"
                android:layout_height="@dimen/icons"/>

    </LinearLayout>

    <me.antonio.noack.gl.GLView
            android:id="@+id/glView"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>

</LinearLayout>